// Todas las tablas
.table
	font-size 1rem
	width 100%

	tbody tr:nth-child(even)
		background $gris_suave

	tfoot tr:nth-child(odd)
		background $blanco_anaranjado

	tbody
		border-bottom 5px solid #fff

	thead tr th,
	caption
		border 1px solid transparent
		background $gris
		padding 0.3rem
		text-align center
		text-transform uppercase
		vertical-align top

	tr
		td[colspan="2"],
		td[colspan="4"],
		td[colspan="6"],
		thead th
			text-align left
		
		td
			border 1px solid rgba(250,250,250,0.2)
			padding 0.5em
			text-align center
			width auto

	tr td.subtitulo,
	.table caption
		background #DC5B34
		color #fff
		font-style normal
		padding 0.5em
		text-align center
		text-transform uppercase

	tfoot
		border-top 10px solid #fff

