#home_slider
	overflow hidden

	img
		height 100vh
		object-fit cover

#home_slider
	z-index 12



#logo,
#logo_home

	margin 0
	position relative
	transition all 0.4s ease-in-out
	width 100%


#logo div, #logo figure, #logo_home figure, #logo_home div
{
	display: inline-block;
	text-shadow: 0px -1px 0px $negro_oscuro_transparente;
}
#logo figure, #logo_home figure
{
	width: 150px;
}
