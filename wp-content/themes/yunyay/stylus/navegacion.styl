.navegacion
	box-sizing border-box
	align-items stretch
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content space-between
	font-family 'Raleway'
	font-weight lighter
	position absolute
	left 0
	top 0
	height 100%
	width 100%
	z-index 120

	div
		align-items center
		display flex

		a
			background rgba(0,0,0,0.4)
			color #eee
			cursor pointer
			font-size 3rem
			padding 0.1em 0.3em 0.3em 0.3em
			line-height 100%
			vertical-align middle

			&:hover			
				color #E39250

		&.back
			a
				border-radius 0 50% 50% 0

		&.next
			a
				border-radius: 50% 0 0 50%


@media screen and (min-width: 860px)
	.navegacion

		.back
			a
				&:hover
					background: rgba(0,0,0,0.7)
					padding-left: 0.4em
		.next
			a
				&:hover
					background: rgba(0,0,0,0.7)
					padding-right: 0.4em





// BArra navegacion del men√∫ principal
.barra_navegacion
	font-family 'Raleway'
	position absolute
	right 0px
	top 0
	z-index 344

	ul
		margin: 0
		padding-left: 0
		padding-right: 0

		li
			list-style: none
			margin: 1px 0

			a
				background: rgba(30,30,30,0.85)
				display: block
				padding: 0.5rem 1rem
				text-shadow: 0px -1px 0px $negro_oscuro_transparente

				&:hover
					background #eee
					color #003333

			ul
				display block
				height 0
				opacity 0
				overflow hidden

				li.current-menu-item a
					background #E39150
					color white
					&:hover
						cursor default


@media screen and (min-width: 961px)
	.barra_navegacion
		display block
		height 100%
		position relative
		text-align right

		ul
			height 100%
			padding 0
			margin 0

			li
				display inline-block
				height 100%

				a
					background none
					height 100%
					text-shadow none

					&:hover
						background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0) 64%, rgba(220, 91, 52, 0.5) 65%, rgba(220, 91, 52, 0.5) 100%)
						color $naranja
			
				ul
					li.current-menu-item a
						background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0) 64%, $naranja 65%, $naranja 100%)
						color $naranja
	
	

@media screen and (max-width: 290px)
	.barra_navegacion
		ul
			li
				&:hover
				&:focus
				&:active
					ul
						margin-bottom: 4em
						display block