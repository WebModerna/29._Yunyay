
form
	display block
	padding 0.5em
	text-shadow 0px -1px 0px rgba(0,0,0,0.25)

	h3,
	h4,
	h5
		display block

	input,
	textarea,
	select,
	.vermas,
	.comment-reply-link
		border none
		// border-radius 0.5em
		// box-shadow 0px 1px 0px 0px rgba(255,255,255,0.5) inset, 0px -15px 15px 0px rgba(0,0,0,0.25) inset
		color #666
		display block
		margin 0.2em auto 0.2em 0
		padding 0.4em
		width 95%

	input[placeholder],
	textarea[placeholder]
		color #4D7070

	input[type="submit"],
	.button,
	.vermas,
	.comment-reply-link
		background #E39250
		border none
		color #eee
		display inline-block
		padding 0.7em 1.5em
		text-shadow 0px -1px 0px rgba(0,0,0,0.25)
		transition all 0.2s ease-in-out
		width auto

	input[type="submit"]
		&:hover
		&:active
		&:focus		
			background #DC5B34

	.button
		&:hover
		&:active
		&:focus
			background #DC5B34

	.vermas
		&:hover
		&:active
		&:focus
			background #DC5B34

	.comment-reply-link
		&:hover
		&:active
		&:focus
			background #DC5B34

	input#captcha,
	input#cantidadpersonas
		display inline-block
		width 100px

	p
		img
			vertical-align middle
			width 100px !important

	select
		color #4D7070
		display inline-block
		margin 0.1em 0.1em 0.4em 0
		width auto

		option
			color #333

		option[selected="selected"]
			background #043636
			color #d3d3d3

	textarea
		height 7em